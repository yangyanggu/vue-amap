{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "strict": true,
    "module": "ES2020",
    "target": "ESNext",
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": ["node_modules", "**/__test?__", "**/dist"],
}
